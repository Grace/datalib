{
  "name": "datalib",
  "version": "1.2.0",
  "description": "JavaScript utilites for loading, summarizing and working with data.",
  "keywords": [
    "data",
    "table",
    "statistics",
    "parse",
    "csv",
    "tsv",
    "json",
    "utility"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/vega/datalib.git"
  },
  "author": {
    "name": "Jeffrey Heer",
    "url": "http://idl.cs.washington.edu"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "d3": "3.5.x",
    "topojson": "1.6.x",
    "request": "2.53.x",
    "sync-request": "2.0.x"
  },
  "devDependencies": {
    "browserify": "10.0.x",
    "browserify-shim": "3.8.x",
    "chai": "1.10.x",
    "istanbul": "0.3.x",
    "jshint": "2.8.x",
    "mocha": "2.1.x",
    "uglify-js": "2.4.x"
  },
  "main": "src/index.js",
  "scripts": {
    "deploy": "npm run lint && npm run test && scripts/deploy.sh",
    "lint": "jshint src/",
    "test": "mocha --recursive test/",
    "cover": "istanbul cover _mocha -- --recursive test/",
    "build": "browserify src/index.js --debug --standalone dl -o datalib.js",
    "postbuild": "uglifyjs datalib.js -c -m -o datalib.min.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "d3": "global:d3",
    "topojson": "global:topojson"
  },
  "browser": {
    "buffer": false,
    "fs": false,
    "http": false,
    "request": false,
    "sync-request": false,
    "url": false
  }
}
